<h1>My taks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title,  task_path(task)%>
      <input type="checkbox">
      <%= link_to "Delete",

      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
  </li>


  <% end %>
